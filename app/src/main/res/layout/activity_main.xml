<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Rul"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

 <ImageView
     android:id="@+id/Ruleta"
     android:layout_width="302dp"
     android:layout_height="0dp"
     android:layout_marginEnd="44dp"
     android:layout_marginBottom="31dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/txt_texto"
     app:srcCompat="@drawable/ruleta" />

 <TextView
     android:id="@+id/txt_texto"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="104dp"
     android:layout_marginBottom="76dp"
     android:background="#575252"

     android:text="TextView"
     android:textColor="@color/white"
     android:textSize="15dp"
     app:layout_constraintBottom_toTopOf="@+id/Ruleta"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <ImageView
     android:id="@+id/Flecha"
     android:layout_width="149dp"
     android:layout_height="127dp"
     android:layout_marginBottom="30dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.498"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/txt_texto"
     app:layout_constraintVertical_bias="1.0"
     app:srcCompat="@drawable/fleccha" />
</androidx.constraintlayout.widget.ConstraintLayout>
